@page
@model ProductCRUDrazorWithPostgresql.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Product
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this product? This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Product ID</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-secondary">@Model.Product.Id</span>
                        </dd>

                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">
                            <strong>@Model.Product.Name</strong>
                        </dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">
                            @Model.Product.Description
                        </dd>

                        <dt class="col-sm-3">Price</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-success">$@Model.Product.Price.ToString("N2")</span>
                        </dd>

                        <dt class="col-sm-3">Stock</dt>
                        <dd class="col-sm-9">
                            @Model.Product.Stock units
                        </dd>

                        <dt class="col-sm-3">Created At</dt>
                        <dd class="col-sm-9">
                            @Model.Product.CreatedAt.ToString("MMMM dd, yyyy")
                        </dd>
                    </dl>

                    <hr />

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Product.Id" />
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
